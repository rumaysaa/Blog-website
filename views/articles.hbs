<div class="container-fluid">
    <h1 class="page-title">Latest Articles</h1>
    <p class="page-subtitle">Discover amazing stories and insights from our community</p>
    
    {{#if data.list}}
    <div class="article-grid">
        {{#each data.list}}
        <div class="article-card">
            <div class="article-card-image">
                {{#if coverPhoto}}
                <img src="/uploads/{{coverPhoto}}" alt="{{heading}}" style="width: 100%; height: 100%; object-fit: cover;">
                {{else}}
                <i class="fas fa-image"></i>
                {{/if}}
            </div>
            <div class="article-card-body">
                <h5 class="article-card-title">{{heading}}</h5>
                <div class="article-card-meta">
                    {{#if categoryID}}
                    <span class="article-category">{{categoryID.catName}}</span>
                    {{else}}
                    <span class="article-category">Uncategorized</span>
                    {{/if}}
                    <span class="article-author">
                        {{#if userID}}
                            {{#ifEquals userID._id @root.session.user._id}}
                            <i class="fas fa-user-check" style="margin-right: 0.3rem;"></i>
                            {{/ifEquals}}
                            {{userID.name}}
                        {{else}}
                        Anonymous
                        {{/if}}
                    </span>
                </div>
                <a href="/comments?id={{_id}}" class="article-card-link">
                    <i class="fas fa-arrow-right" style="margin-right: 0.5rem;"></i>Read Article
                </a>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="alert alert-info text-center" style="margin-top: 2rem;">
        <h5>No articles yet</h5>
        <p>Be the first to write an article!</p>
        <a href="/articles/form" class="btn btn-primary">Write Article</a>
    </div>
    {{/if}}
</div>
