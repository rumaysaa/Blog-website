<div class="container" style="max-width: 450px; margin-top: 6%;">
    <div class="form-container">
        {{#if user.msg}}
        <div class="alert alert-custom alert-danger-custom alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle" style="margin-right: 0.5rem;"></i>
            {{user.msg}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/if}}

        <h2 style="margin-bottom: 0.5rem;">Change Password</h2>
        <p class="page-subtitle" style="margin-bottom: 2rem;">Update your password to keep your account secure</p>

        <form action="/users/changePassword" method="post">
            <input type="hidden" name="id" value="{{user.id}}">

            <div class="form-group">
                <label class="form-label" for="oldPass">
                    <i class="fas fa-lock" style="margin-right: 0.5rem;"></i>Current Password
                </label>
                <input 
                    type="password" 
                    id="oldPass"
                    name="oldPass" 
                    placeholder="Enter your current password" 
                    {{#if user.msg}}class="is-invalid"{{/if}}
                    required>
            </div>

            <div class="form-group">
                <label class="form-label" for="password">
                    <i class="fas fa-key" style="margin-right: 0.5rem;"></i>New Password
                </label>
                <input 
                    type="password" 
                    id="password"
                    name="password" 
                    placeholder="Create a new password" 
                    minlength="6"
                    {{#if user.passMatch}}class="is-invalid"{{/if}}
                    required>
                <small style="color: #7f8c8d; display: block; margin-top: 0.3rem;">
                    <i class="fas fa-info-circle"></i> Minimum 6 characters
                </small>
            </div>

            <div class="form-group">
                <label class="form-label" for="confirmPass">
                    <i class="fas fa-shield-alt" style="margin-right: 0.5rem;"></i>Confirm Password
                </label>
                <input 
                    type="password" 
                    id="confirmPass"
                    name="confirmPass" 
                    placeholder="Confirm your new password" 
                    {{#if user.passMatch}}class="is-invalid"{{/if}}
                    required>
                {{#if user.passMatch}}
                <div class="invalid-feedback d-block">
                    <i class="fas fa-times-circle"></i> Passwords don't match
                </div>
                {{/if}}
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-check" style="margin-right: 0.5rem;"></i>Update Password
            </button>

            <a href="/users/editUser" class="btn btn-cancel" style="width: 100%; text-align: center; text-decoration: none; display: block; margin-top: 0.5rem;">
                <i class="fas fa-arrow-left" style="margin-right: 0.5rem;"></i>Back to Profile
            </a>
        </form>
    </div>
</div>