<div class="container" style="max-width: 450px; margin-top: 6%;">
    <div class="form-container">
        {{#if msg}}
        <div class="alert alert-custom alert-danger-custom alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle" style="margin-right: 0.5rem;"></i>
            {{msg}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/if}}

        <h2 style="margin-bottom: 0.5rem;">Forgot Password?</h2>
        <p class="page-subtitle" style="margin-bottom: 2rem;">We'll send you a code to reset your password</p>

        <form action="/users/verifyMail" method="post">
            <div class="form-group">
                <label class="form-label" for="mail">
                    <i class="fas fa-envelope" style="margin-right: 0.5rem;"></i>Email Address
                </label>
                <input 
                    type="email" 
                    id="mail"
                    name="mail" 
                    placeholder="Enter your registered email" 
                    {{#if msg}}class="is-invalid"{{/if}}
                    required>
                {{#if msg}}
                <div class="invalid-feedback d-block">
                    <i class="fas fa-times-circle"></i> {{msg}}
                </div>
                {{/if}}
            </div>

            <div style="background-color: #f0f8fc; border-left: 4px solid var(--secondary-color); padding: 1rem; border-radius: 6px; margin-bottom: 1.5rem;">
                <p style="color: var(--dark-text); font-size: 0.9rem; margin: 0;">
                    <i class="fas fa-info-circle" style="margin-right: 0.5rem;"></i>
                    A verification code will be sent to this email address
                </p>
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-paper-plane" style="margin-right: 0.5rem;"></i>Send Reset Code
            </button>

            <div class="form-footer">
                <p>Remember your password? <a href="/users/login">Sign in here</a></p>
            </div>

            <a href="/articles" class="btn btn-cancel" style="width: 100%; text-align: center; text-decoration: none; display: block;">
                <i class="fas fa-arrow-left" style="margin-right: 0.5rem;"></i>Back to Home
            </a>
        </form>
    </div>
</div>