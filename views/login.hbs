<div class="container" style="max-width: 450px; margin-top: 6%;">
    <div class="form-container">
        {{#if user.activateMsg}}
        <div class="alert alert-custom alert-success-custom alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle" style="margin-right: 0.5rem;"></i>
            {{user.activateMsg}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/if}}
        
        {{#if user.msg}}
        <div class="alert alert-custom alert-danger-custom alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle" style="margin-right: 0.5rem;"></i>
            {{user.msg}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/if}}

        <h2 style="margin-bottom: 0.5rem;">Welcome Back</h2>
        <p class="page-subtitle" style="margin-bottom: 2rem;">Sign in to continue to your account</p>

        <form action="/users/login" method="post">
            <input type="hidden" name="url" value="{{user.url}}">
            <input type="hidden" id="_id" value="{{user.id}}" name="articleID">

            <div class="form-group">
                <label class="form-label" for="mail">
                    <i class="fas fa-envelope" style="margin-right: 0.5rem;"></i>Email Address
                </label>
                <input 
                    type="email" 
                    id="mail"
                    name="mail" 
                    placeholder="name@example.com" 
                    value="{{user.mail}}" 
                    {{#if user.incMail}}class="is-invalid"{{/if}}
                    required>
                {{#if user.incMail}}
                <div class="invalid-feedback d-block">
                    <i class="fas fa-times-circle"></i> Email not registered
                </div>
                {{/if}}
            </div>

            <div class="form-group">
                <label class="form-label" for="password">
                    <i class="fas fa-lock" style="margin-right: 0.5rem;"></i>Password
                </label>
                <input 
                    type="password" 
                    id="password"
                    name="password" 
                    placeholder="Enter your password" 
                    {{#if user.passMsg}}class="is-invalid"{{/if}}
                    required>
                {{#if user.passMsg}}
                <div class="invalid-feedback d-block">
                    <i class="fas fa-times-circle"></i> {{user.passMsg}}
                </div>
                {{/if}}
            </div>

            <div class="checkbox-custom">
                <input type="checkbox" id="remember" name="remember" checked>
                <label for="remember">Remember me</label>
            </div>

            <a href="/users/verifyMail" class="forgot-password">
                <i class="fas fa-question-circle" style="margin-right: 0.3rem;"></i>Forgot Password?
            </a>

            <button type="submit" class="btn-submit">
                <i class="fas fa-sign-in-alt" style="margin-right: 0.5rem;"></i>Login
            </button>

            <div class="form-footer">
                <p>Don't have an account? <a href="/users">Create one here</a></p>
            </div>

            <a href="/articles" class="btn btn-cancel" style="width: 100%; text-align: center; text-decoration: none; display: block;">
                <i class="fas fa-arrow-left" style="margin-right: 0.5rem;"></i>Back to Home
            </a>
        </form>
    </div>
</div>